#! /bin/bash
echo "BEGIN: $0"

if ! [ -e ./last_check ]; then
  date '+%s' > ./last_check
fi
p=$(cat ./last_check)
c=$(date '+%s')
e=$(expr $c - $p)
if [ $e -gt 180 ] ; then
  echo "END(Success): $0, Nothing to do."
  exit 0
fi

touch ./last_check
echo "UPDATING" > $STAGEFILE

rpm -qi openssh-server > /root/openssh-server_current
yum update -y openssh-server
rpm -qi openssh-server > /root/openssh-server_updated

a=`cat /root/openssh-server_current`
b=`cat /root/openssh-server_updated`
if [ "$a" == "$b" ]; then
  echo "No update."
else
  echo "Updated. Restarting sshd."
  kill `cat /var/run/sshd.pid`
  /usr/sbin/sshd -D -E /root/sshd.log &
fi

echo "RUNNING" > $STAGEFILE
echo "END(SUCCESS): $0"

